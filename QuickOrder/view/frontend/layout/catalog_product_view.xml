<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="product.info.addtocart.additional">
            <action method="setTemplate">
                <argument name="template" xsi:type="string">ALevel_QuickOrder::product/view/addtocart.phtml</argument>
            </action>
        </referenceBlock>

        <block class="ALevel\QuickOrder\Block\Component"
               name="component"
               template="ALevel_QuickOrder::product/view/addtocart.phtml">
            <arguments>
                <argument name="jsLayout" xsi:type="array">
                    <item name="components" xsi:type="array">
                        <item name="component-quick-order" xsi:type="array">
                            <item name="component" xsi:type="string">ALevel_QuickOrder/js/send-info</item>
                            <item name="config" xsi:type="array">
                                <item name="template" xsi:type="string">ALevel_QuickOrder/send-info</item>
                            </item>
                            <item name="url" xsi:type="string">q_order/record/add</item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </block>

    </body>
</page>
